<% if (errors.length > 0) { %>
    <div class="error">
        <p>
            <% errors.forEach(erro => {%>
                <%= erro %><br>
                    <% }); %>
        </p>
    </div>
    <% } %>

        <% if (success.length > 0) { %>
            <div class="success">
                <p>
                    <% success.forEach(success => {%>
                        <%= success %><br>
                            <% }); %>
                </p>
            </div>
            <% } %>